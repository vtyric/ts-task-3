{
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
        "specs"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": false,
        "outDir": "build",
        "rootDir": ".",
        "strict": false,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}